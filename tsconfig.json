{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true, // 是否生成声明文件
    "declarationDir": "./types", // 声明文件打包的位置
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "ES5",
  },
  "include": [
    "sources/*.ts",
    "sources/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}
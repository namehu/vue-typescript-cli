{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "outDir": "./lib",
    "baseUrl": ".",
    "lib": [
      "esnext",
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "sources/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
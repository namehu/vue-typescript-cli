{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "no-empty": [
      true,
      "allow-empty-catch",
      "allow-empty-functions"
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-snake-case"
    ],
    "arrow-parens": [
      true,
      "ban-single-arg-parens"
    ],
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^(import|export {(.*?)}|(export )?(default )?function)|export default class|@State|components: {",
        "check-strings": true,
        "check-regex": true
      }
    ]
  }
}